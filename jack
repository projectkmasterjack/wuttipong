            <label for="step1_technique">เทคนิค/กลยุทธการสอน:</label>
            <select id="step1_technique" name="step1_technique">
                <option value="recap">Recap: สะท้อนกลับ</option>
                <option value="movement">การเคลื่อนไหว (Movement)</option>
                <option value="focusing">การจุดรวมความสนใจ (Focusing)</option>
                <option value="flipchart">การใช้ Flipchart</option>
                <option value="powerpoint">การใช้ Power Point</option>
                <option value="blackboard">การใช้กระดานดำ</option>
                <option value="semantic">การใช้คำพูด (Semantic)</option>
                <option value="problem_solving">การใช้โจทย์ปัญหา</option>
                <option value="gesture">การใช้ท่าทางประกอบ (Gesture)</option>
                <option value="situational">การใช้สถานการณ์</option>
